@{
    ViewData["Title"] = "Start a Habit";
}

@model Habit

<div class="card col-8 mt-4 m-auto">
  <div class="card-header"><h2>Start a Habit</h2></div>
  <div class="card-body">

    <form asp-action="UpdateHabit" asp-controller="Habit" method="post" asp-route-habitId="@Model.HabitId">

      <div class="form-floating">
        <input asp-for="Title" class="form-control" placeholder="Habit Title:">
        <label asp-for="Title">Habit Title:</label>
        <span asp-validation-for="Title" class="validation-text"></span>
      </div>
      
      <div class="form-floating mt-3">
        <input asp-for="Description" class="form-control" placeholder="Description:">
        <label asp-for="Description">Description:</label>
        <span asp-validation-for="Description" class="validation-text"></span>
      </div>
      
      <div class="form-floating mt-3">
        <select class="form-select" asp-for="Category">
            <option value="Health and Wellness">Health and Wellness</option>
            <option value="Personal">Personal</option>
            <option value="Knowledge Seeking">Knowledge Seeking</option>
            <option value="Hobby">Hobby</option>
        </select>
        <label asp-for="Category">Category:</label>
        <span asp-validation-for="Category" class="validation-text"></span>
      </div>

      <input type="hidden" asp-for="UserId" value="@Context.Session.GetInt32("UserId")">

      <input type="submit" value="Update Habit" class="btn btn-primary mt-3">

    </form>

  </div>
</div>